                    <div class="col-5">
                        <div class="icon-big text-center">
                            <i class="flaticon-analytics"></i>
                        </div>
                    </div>
                    <div class="col col-stats">
                        <div class="numbers">
                            <p class="card-category">Total Interactions</p>
                            <h4 class="card-title">@ViewBag.TotalInteractions</h4>
                        </div>
                    </div>
                </div>
            </div>
